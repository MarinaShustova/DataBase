<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_create_actor"
        tools:context=".CreateActorActivity" tools:ignore="MissingDefaultResource">

    <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actor_input_name" android:hint="Name" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/actor_input_birth" android:hint="Birth date" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_sex"
            tools:layout_editor_absoluteX="16dp"/>
    <TextView
            android:text="in format yyyy-mm-dd"
            android:layout_width="158dp"
            android:layout_height="18dp"
            android:id="@+id/textView3" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_birth" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/actor_input_birth"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/actor_input_sex" android:hint="Sex" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_name"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/actor_input_children_amount" android:hint="Children amount"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/actor_input_salary" android:hint="Salary" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_children_amount"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="17dp"
            android:id="@+id/actor_input_origin" android:hint="Origin" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_salary"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="42dp"
            android:inputType="date"
            android:ems="10"
            tools:layout_editor_absoluteX="17dp"
            android:id="@+id/actor_input_hire" android:hint="Hire date" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_origin"/>
    <TextView
            android:text="in format yyyy-mm-dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_hire"
            app:layout_constraintStart_toStartOf="@+id/actor_input_hire" android:layout_marginStart="8dp"/>
    <CheckBox
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/actor_input_student"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <Button
            android:text="submit"
            android:layout_width="98dp"
            android:layout_height="47dp"
            tools:layout_editor_absoluteX="15dp" android:id="@+id/actor_input_submit"
            tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/actor_input_student"/>
</android.support.constraint.ConstraintLayout>
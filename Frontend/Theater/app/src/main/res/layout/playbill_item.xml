<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/spectacle_date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:text="08"/>

        <TextView
            android:id="@+id/spectacle_date_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="сб"/>

        <TextView
            android:id="@+id/spectacle_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="19:00"/>

        <TextView
            android:id="@+id/spectacle_is_premiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="премьера"/>

        <TextView
            android:id="@+id/spectacle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Красная шапочка"/>

        <Button
            android:id="@+id/product_view_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_style_gradient"
            android:text="@string/tickets"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spectacle_name" />

        <TextView
            android:id="@+id/spectacle_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="16+"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
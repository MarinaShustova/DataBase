<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_update_actor"
        tools:context=".UpdateActorActivity" tools:ignore="MissingDefaultResource">
    <EditText
            android:layout_width="319dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteX="15dp"
            android:id="@+id/actor_update_salary" android:hint="Salary" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_children_amount"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/actor_update_children_amount" android:hint="Children amount"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="14dp"
            android:id="@+id/actor_update_origin" android:hint="Origin" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_salary"/>
    <Button
            android:text="submit"
            android:layout_width="98dp"
            android:layout_height="47dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/actor_update_submit"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/actor_update_student"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/actor_update_name" android:hint="Name" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="321dp"
            android:layout_height="42dp"
            android:inputType="date"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/actor_update_hire" android:hint="Hire date" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_origin"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/actor_update_sex" android:hint="Sex" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_name"/>
    <CheckBox
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/actor_update_student"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="in format yyyy-mm-dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_hire" android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@+id/actor_update_hire"/>
    <TextView
            android:text="in format yyyy-mm-dd"
            android:layout_width="158dp"
            android:layout_height="18dp"
            android:id="@+id/textView4" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_birth" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/actor_update_birth"/>
    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/actor_update_birth" android:hint="Birth date" tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/actor_update_sex"/>
</android.support.constraint.ConstraintLayout>